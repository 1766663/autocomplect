<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">

            {% block header %}
                {% if app.session.get('iduser') %}
                    <header class="blog-header py-3">
                        <div class="row flex-nowrap justify-content-between align-items-center">
                            <div class="col-8">
                                {{ app.session.get('username')}}
                            </div>
                            <div class="col-4 d-flex justify-content-end align-items-center">
                                <a href="{{ path('app_logout') }}" class="btn btn-secondary float-right">Выход</a>
                            </div>
                        </div>
                    </header>
                {% endif %}
            {% endblock %}

            {% block body %}{% endblock %}
            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        </div>
    </body>
</html>
