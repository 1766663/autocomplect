{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    {{ form_start(loginForm, {'attr': {'class': 'form-signin'}}) }}

            <h1 class="h3 mb-3 font-weight-normal text-center">Авторизация</h1>

            <div class="my-custom-class-for-errors">
                {{ form_errors(loginForm) }}
            </div>

            {{ form_row(loginForm.email, {'label_attr': {'class': 'sr-only'},
                                           'attr': {'class': 'form-control', 'placeholder': 'Email'}}
            ) }}

            {{ form_row(loginForm.password, {'label_attr': {'class': 'sr-only'},
                                             'attr': {'class': 'form-control', 'placeholder': 'Пароль'}}
            ) }}

            <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>

    {{ form_end(loginForm) }}


{% endblock %}