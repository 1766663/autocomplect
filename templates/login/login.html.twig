{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-md-12 text-center">
            <h1>Login</h1>
        </div>

        <div class="col-md-12 text-center">

            {{ form_start(loginForm) }}

                {{ form_row(loginForm.email, {label_attr: {class: 'col-md-1'} }) }}
                {{ form_row(loginForm.password, {label_attr: {class: 'col-md-1'} }) }}

                <button class="btn btn-primary">Login</button>

            {{ form_end(loginForm) }}

        </div>
{% endblock %}